@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@model IEnumerable<Student>

<a  asp-action="Create" class="btn btn-primary">Create Student</a>

<a asp-action="Create" asp-controller="Student" asp-route-name="Add" class="btn btn-primary">Create Student 1</a>
<a href="../student/add" class="btn btn-primary">Create Student3</a>
<div class="container mt-3">
    <table class=" table table-striped">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Họ tên </th>
                <th>Ngày sinh</th>
                <th>Ngành</th>
                <th>Giới tính</th>
                <th>Hệ đào tạo</th>
                <th>Địa chỉ</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@s.Name</td>
                    <td>@s.DateOfBorth</td>
                    @{
                        string str = "";
                        switch (s.Branch)
                        {
                            case Branch.IT:
                                str = "CNTT";
                                break;
                            case Branch.BE:
                                str = "Kinh Tế";
                                break;
                            case Branch.CE:
                                str = "Công Trình";
                                break;
                            case Branch.EE:
                                str = "Điện - Điện Tử";
                                break;

                        }
                    }
                    <td>@str</td>
                    <td>@(s.Gender == Gender.Male ? "Nam" : "Nữ")</td>
                    <td>@(s.IsRegular ? "Chính Quy" : "Phi Chính Quy")</td>
                    <td>@s.Address</td>
                    <td>@s.Email</td>
                    <td>@s.Diem</td>
                </tr>

            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script>
        var table = document.querySelector("table");
        table.onclick = function onTableClick() {
            table.style = "background-color: yellow;"
        }
    </script>
}
